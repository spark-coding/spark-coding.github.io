                        form#trialForm(action='https://formsubmit.co/admin@sparkcoding.com.au', method='POST')
                            // Honeypot for spam protection
                            input(type='text', name='_honeypot', style='display:none')
                            // Disable captcha
                            input(type='hidden', name='_captcha', value='false')
                            // Redirect back to form with success parameter
                            input(type='hidden', name='_next', value='https://sparkcoding.com.au/?success=true#trial-form')
                            input(type='hidden', name='_subject', value='New Free Trial Enquiry - Spark Coding')
                            
                            // Parent/Guardian Name
                            .form-floating.mb-3
                                input#parentName.form-control(type='text', name='Parent/Guardian Name', placeholder='Enter parent/guardian name...', required)
                                label(for='parentName') Parent/Guardian Name *
                            
                            // Email Address
                            .form-floating.mb-3
                                input#email.form-control(type='email', name='Email', placeholder='name@example.com', required)
                                label(for='email') Email Address *
                            
                            // Child's School Year Level
                            .form-floating.mb-3
                                select#yearLevel.form-control(name='School Year Level', required)
                                    option(value='', selected, disabled) Select year level...
                                    option(value='3-4') Year 3-4
                                    option(value='5-6') Year 5-6
                                    option(value='7-8') Year 7-8
                                    option(value='9-10') Year 9-10
                                    option(value='11-12') Year 11-12
                                label(for='yearLevel') Child's School Year Level *
                            
                            // Coding Experience Level
                            .form-floating.mb-3
